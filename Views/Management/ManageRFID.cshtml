                        },
                        error: function(xhr, resp, text) {
                            Swal.fire({
                            icon: 'error',
                            title: 'ผิดพลาด',
                            text: 'บันทึกข้อมูลไม่สำเร็จ',
                            confirmButtonText: 'ยืนยัน'
                            })
                            console.log(xhr, resp, text);
                        }
                    })
                }
            });
            $('#editRFIDForm').validate({
                rules: {
                    BuyDate: {
                        required: true
                    },
                    ExpDate: {
                        required: true
                    }
                },
                messages: {
                    BuyDate: {
                        required: "กรุณาระบุวันที่ซื้อ"
                    },
                    ExpDate: {
                        required: "กรุณาระบุวันที่หมดอายุ"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });
        $("#cancelRFIDEdit").click(function() { //clear validate
            var validImportForm = $( "#editRFIDForm" ).validate();
            validImportForm.resetForm();
        });

        function loadTableRFID() {
            $('.spinnerAdd').show();
            $('.addTableRFIDDiv').empty(); 
            var htmlStr = '<table id="addTableRFID" class="table table-striped table-bordered table-hover" style="width:100%">'
                +'<thead>'
                    +'<tr class="text-center">'
                        +'<th>No.</th>'
                        +'<th>รหัส</th>'
                    +'</tr>'
                +'</thead>'
            +'<tbody>';
            for( var i = 0; i < 30; i++ ) {
                htmlStr += '<tr>'
                    +'<td>'+parseInt(i+1)+'</td>'
                    +'<td>'+"xxxxx"+'</td>'
                +'</tr>';
            }
            htmlStr += '</tbody>'
            +'</table>';  

            $('.addTableRFIDDiv').html(`<div class="table-responsive">${htmlStr}</div>`);
            $("#addTableRFID").DataTable({
                dom: `<'row'<'col-sm-12'l>>
                    <'row'<'col-sm-12'tr>>
                    <'row'<'col-sm-6'i><'col-sm-6'p>>`,
                drawCallback: function (settings) {
