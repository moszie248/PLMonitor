            var htmlStr = '<table id="createDataTable" class="display nowrap table table-bordered" style="width:100%">'
                +'<thead>'
                    +'<tr class="text-center">'
                        +'<th>No.</th>'
                        +'<th>รหัส</th>'
                        +'<th>เลขที่ใบสั่งซื้อ</th>'
                        +'<th>ค่าความเสียหาย</th>'
                        +'<th>วันที่ซื้อ</th>'
                        +'<th>วันหมดอายุ</th>'
