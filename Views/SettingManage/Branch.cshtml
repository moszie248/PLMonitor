@section Scripts {
    <script src="~/template/adminlte/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/template/adminlte/plugins/jquery-validation/additional-methods.min.js"></script>
    <script>

        document.nz.openMenu("#SettingManage, #SettingManageDataCus").activeMenu("#Branch");

    $(document).ready(function () { 

        loadTable();

        document.__proto__.deleteRow = function () {
            Swal.fire({
            title: 'ต้องการลบข้อมูล ?',
            text: "กดยืนยันเพื่อลบข้อมูล",
            icon: 'error',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'ยกเลิก',
            confirmButtonText: 'ยืนยัน'
            }).then((result) => {
            if (result.value) {
                Swal.fire({
                icon: 'success',
                title: 'สำเร็จ',
                text: 'ลบข้อมูลแล้ว',
                confirmButtonText: 'ยืนยัน'
                })

            }
            })         
        }; 

        /*---------------------------------------------form----------------------------*/
        $("#branchSubmit").click(function() {
            $.validator.setDefaults({
                submitHandler: function () {
                    var addData = $("#addBranch").serializeArray();
                    $.ajax({
                        url: '/SettingManage/reciveAddBranch', // url where to submit the request
                        type : "POST", // type of action POST || GET
                        dataType : 'JSON', // data type
                        //contentType: "application/json",
                        data : addData, // post data || get data
                        success : function(result) {
                            console.log(result);
                            Swal.fire({
                            icon: 'success',
                            title: 'สำเร็จ',
                            text: 'บันทึกข้อมูลสำเร็จ',
                            confirmButtonText: 'ยืนยัน'
                            })

                            document.getElementById("addBranch").reset();
                        },
                        error: function(xhr, resp, text) {
                            Swal.fire({
                            icon: 'error',
                            title: 'ผิดพลาด',
                            text: 'บันทึกข้อมูลไม่สำเร็จ',
                            confirmButtonText: 'ยืนยัน'
                            })
                            console.log(xhr, resp, text);
                        }
                    })

                }
            });
            $('#addBranch').validate({
                rules: {
                    ID: {
                        required: true
                    },
                    BranchName: {
                        required: true
                    },
                    CompanyName: {
                        required: true
                    }
                },
                messages: {
                    ID: {
                        required: "กรุณาระบุรหัส สาขา/โกดัง"
                    },
                    BranchName: {
                        required: "กรุณาระบุชื่อสาขา"
                    },
                    CompanyName: {
                        required: "กรุณาระบุชื่อบริษัท"
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });
        });
        $("#cancelAdd").click(function() { //clear validate
            var validImportForm = $( "#addBranch" ).validate();
            validImportForm.resetForm();
        });
        

        /*---------------------------------------------form----------------------------*/
