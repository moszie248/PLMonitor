                                icon: 'error',
                                title: 'ผิดพลาด',
                                text: 'บันทึกข้อมูลไม่สำเร็จ',
                                confirmButtonText: 'ยืนยัน'
                                })
                                console.log(xhr, resp, text);
                            }
                        })

                }
            });
            $('#editBranch').validate({
                rules: {
                    ID: {
                        required: true
                    },
                    BranchName: {
                        required: true
                    },
                    CompanyName: {
                        required: true
                    }
                },
