        });

        function loadTable() {
            $('.spinnertable').show();
            $('.createDataTable').empty(); 
            var htmlStr = '<table id="createDataTable" class="table table-striped table-bordered table-hover" style="width:100%">'
                +'<thead>'
                    +'<tr>'
                        +'<th>No.</th>'
                        +'<th>รหัส สาขา/โกดัง</th>'
                        +'<th>ชื่อ สาขา/โกดัง</th>'
                        +'<th>รายละเอียด</th>'
                        +'<th>สถานะ</th>'      
                        +'<th></th>'
                    +'</tr>'
                +'</thead>'
            +'<tbody>';
            for( var i = 0; i < 30; i++ ) {
                htmlStr += '<tr>'
                    +'<td>'+parseInt(i+1)+'</td>'
                    +'<td>'+"xxxxx"+'</td>'
                    +'<td>'+'xxxxx'+'</td>'
                    +'<td>'+"xxxxx"+'</td>'
                    +'<td>'+"xxxxx"+'</td>'
                    +'<td class="d-flex justify-content-lg-center">'
                        +'<a href="javascript:void(0)"><i class="fas fa-edit" data-toggle="modal" data-target="#editModal" ></i></a> '
                        +'<pre></pre>'
                        +'<a href="javascript:void(0)"><i class="fas fa-trash" style="color:red" onclick="deleteRow()"></i></a>'
                        +'</td>'
                +'</tr>';
            }
            htmlStr += '</tbody>'
            +'</table>';  

            $('.createDataTable').html(`<div class="table-responsive">${htmlStr}</div>`);
            $("#createDataTable").DataTable({
                dom: `<'row'<'col-sm-12'l>>
                    <'row'<'col-sm-12'tr>>
                    <'row'<'col-sm-6'i><'col-sm-6'p>>`,
                drawCallback: function (settings) {
                    $('.spinnertable').hide();
                }
            });
        };


    });

                               
                          
